# ===========================================
# Perks Portal - Environment Configuration
# ===========================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control

# -----------------------------------------
# GetProven API Configuration (REQUIRED)
# -----------------------------------------
# Your GetProven API token (server-side only, never exposed to client)
# Get this from your GetProven dashboard
GETPROVEN_API_TOKEN=your_api_token_here

# GetProven API base URL (default provided)
GETPROVEN_API_URL=https://provendeals.getproven.com/api/ext/v1

# -----------------------------------------
# Data Source Control
# -----------------------------------------
# USE_MOCK_DATA - Controls data source behavior
#   - Remove or set to "false" for PRODUCTION (uses real API)
#   - Set to "true" only for local development without API access
#
# When USE_MOCK_DATA is false (or unset):
#   - Real GetProven API is the primary data source
#   - Mock data is only used as fallback if API fails
#   - Warnings are logged when fallback is triggered
#
# USE_MOCK_DATA=false

# -----------------------------------------
# Application Settings
# -----------------------------------------
# Public URL of your application
NEXT_PUBLIC_APP_URL=https://your-domain.com

# Environment
NODE_ENV=production

# -----------------------------------------
# Feature Flags
# -----------------------------------------
# Enable admin features (set to false to hide admin UI)
NEXT_PUBLIC_ENABLE_ADMIN=true

# -----------------------------------------
# Authentication (Future Implementation)
# -----------------------------------------
# AUTH_SECRET=your_auth_secret_here
# AUTH_PROVIDER_CLIENT_ID=
# AUTH_PROVIDER_CLIENT_SECRET=
