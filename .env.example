# ===========================================
# Perks Portal - Environment Configuration
# ===========================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control

# -----------------------------------------
# GetProven API Configuration (REQUIRED)
# -----------------------------------------
# Your GetProven API token (server-side only, never exposed to client)
# Get this from your GetProven dashboard
GETPROVEN_API_TOKEN=your_api_token_here

# GetProven API base URL (default provided)
GETPROVEN_API_URL=https://provendeals.getproven.com/api/ext/v1

# -----------------------------------------
# Data Source Control
# -----------------------------------------
# USE_MOCK_DATA - Controls data source behavior
#   - Remove or set to "false" for PRODUCTION (uses real API)
#   - Set to "true" only for local development without API access
#
# When USE_MOCK_DATA is false (or unset):
#   - Real GetProven API is the primary data source
#   - Mock data is only used as fallback if API fails
#   - Warnings are logged when fallback is triggered
#
# USE_MOCK_DATA=false

# -----------------------------------------
# Bridge API Configuration (OPTIONAL)
# -----------------------------------------
# Your Bridge API key for warm connections (server-side only)
# Used for admin vendor detail pages to show intropath counts
# Leave empty to disable the feature
BRIDGE_API_KEY=

# Bridge API base URL (default provided)
BRIDGE_API_BASE_URL=https://api.brdg.app

# Use mock intropath data for testing (set to true for development)
# USE_MOCK_INTROPATH_DATA=false

# -----------------------------------------
# Application Settings
# -----------------------------------------
# Public URL of your application
NEXT_PUBLIC_APP_URL=https://your-domain.com

# Environment
NODE_ENV=production

# -----------------------------------------
# Feature Flags
# -----------------------------------------
# Enable admin features (set to false to hide admin UI)
NEXT_PUBLIC_ENABLE_ADMIN=true

# -----------------------------------------
# Bridge Authentication (REQUIRED for production)
# -----------------------------------------
# DEVELOPMENT ONLY: Bypass auth for local testing
# Set to "true" to skip Bridge authentication (NEVER use in production)
# BYPASS_AUTH=true
# DEV_USER_EMAIL=admin@brdg.app

# Admin access control - comma-separated lists
# Users with these emails get admin access
ADMIN_EMAIL_ALLOWLIST=admin@brdg.app

# Users from these domains get admin access (e.g., brdg.app)
ADMIN_DOMAIN_ALLOWLIST=brdg.app

# Bridge auth cookie name is hardcoded to 'authToken' (set by Bridge on *.brdg.app)
# No configuration needed â€” this matches Bridge's cookie name

# Bridge login URL for redirects (default provided)
# BRIDGE_LOGIN_URL=https://app.brdg.app/login

# -----------------------------------------
# Supabase (Redemption Tracking)
# -----------------------------------------
# Supabase project URL and anon key for tracking redemption clicks
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
